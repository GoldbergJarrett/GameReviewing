@using Models

<div style="display: flex; align-items: center; margin-left: 5px; border-left: 2px solid black; padding-left: 5px;">
    Filter:
    <div style="position: relative;">
        <input @bind="SearchParameter" @bind:event="oninput" type="text" @onfocusin="FocusIn" @onfocusout="FocusOut" @onkeydown="OnKeyDown" @onkeyup="OnKeyUp"/>
        @if (DisplayAutocompleteDropdown)
        {
            <div style="position: absolute; z-index: 1; background-color: lightgray; width: 100%;">
                @foreach (Game game in AutocompleteResults)
                {
                    if (AutocompleteDropdownItemTemplate != null)
                    {
                        @AutocompleteDropdownItemTemplate(game)
                    }
                    else
                    {
                        <div>@game.Title</div>
                    }
                }
            </div>
        }
    </div>
</div>  